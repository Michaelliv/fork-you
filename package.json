{
  "name": "fork-you",
  "version": "0.2.0",
  "description": "Git-based CRM. Your pipeline lives in your repo.",
  "type": "module",
  "main": "dist/main.js",
  "bin": {
    "fu": "./dist/main.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "dev": "npx tsx src/main.ts",
    "build:bun": "bun build --compile src/main.ts --outfile fu",
    "build:bun-linux": "bun build --compile --target=bun-linux-x64 src/main.ts --outfile fu-linux-x64",
    "build:bun-mac-arm": "bun build --compile --target=bun-darwin-arm64 src/main.ts --outfile fu-darwin-arm64",
    "build:bun-mac-x64": "bun build --compile --target=bun-darwin-x64 src/main.ts --outfile fu-darwin-x64",
    "test": "bun test",
    "format": "bunx biome format --write src/",
    "lint": "bunx biome lint src/",
    "check": "bunx biome check src/"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/sql.js": "^1.4.9",
    "typescript": "^5.8.0"
  },
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.6.2",
    "nanoid": "^5.1.6",
    "sql.js": "^1.14.0"
  }
}
